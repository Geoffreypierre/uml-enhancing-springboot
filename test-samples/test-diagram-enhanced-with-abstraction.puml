@startuml
abstract class AbstractEntity {
  age: int
  name: String
  +setAge(age: int): void
  +getName(): String
  +setName(name: String): void
  +getAge(): int
}
class Address {
  street: String
  city: String
  zipCode: String
  +getFullAddress(): String
}
class Company {
  companyName: String
  employees: List<Person>
  +addEmployee(person: Person): void
  +getEmployeeCount(): int
}
AbstractEntity <|-- Address
AbstractEntity <|-- Company

Address "*" -- "1" Company : employs
@enduml
